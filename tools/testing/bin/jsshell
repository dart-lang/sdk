JSDIR=${0%/*}/../../../third_party/firefox_jsshell

case $OSTYPE in
    *[Dd]arwin*)
        exec $JSDIR/mac/jsshell/js "$@"
        ;;
    *[Ll]inux*)
        LD_LIBRARY_PATH=$JSDIR/linux/jsshell/ \
            exec $JSDIR/linux/jsshell/js "$@"
        ;;
    *)
        echo No jsshell binary for $(uname) >2
        exit 1
        ;;
esac
