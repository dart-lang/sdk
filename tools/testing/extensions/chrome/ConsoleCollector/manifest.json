{
  "name": "Console Collector",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Allow querying of the Javascript console.",
  "devtools_page" : "devtools.html",
  "browser_action": {
    "name": "ConsoleCollector"
  },
//  "background": {
//    "scripts": ["background.js"],
//    "persistent": true
//  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "file://*" ],
      "js": [ "content.js" ]
    }
  ],
  "permissions": [
    "tabs", "http://*/*", "file://*", "experimental"
  ]
}
